---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title type="text" xml:lang="en">Blog 3</title>
    <link type="application/atom+xml" href="{{site.url}}/blog3/atom.xml" rel="self"/>
    <link type="text" href="{{site.url}}" rel="alternate"/>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>{{site.url}}_category3</id>
    <author>
        <name>Anatoly petrov</name>
    </author>
    
    {% for post in site.posts limit:20 %}
    {% if post.categories contains 'blog3' %}
    <entry>
        <title>{{ post.title }}</title>
        <link href="{{site.url}}{{ post.url }}"/>
        <updated>{{ post.date | date_to_xmlschema }}</updated>
        <id>{{site.url}}{{ post.url }}</id>
        <summary type="html">{{ post.content | xml_escape }}</summary>
        <featuredimg>{{site.url}}{{post.featuredimg}}</featuredimg>
        
    </entry>
    {% endif %}
    {% endfor %}
</feed>
